    key <AC09> { [	   l,          L,       lstroke,          Lstroke ] };
    key <AC10> { [ semicolon,      colon,     paragraph,           degree ] };
    key <AC11> { [apostrophe,   quotedbl,    dead_acute,   dead_diaeresis ] };

    key <AB01> { [	   z,          Z,   acircumflex,      Acircumflex ] };
    key <AB02> { [	   x,          X,            ae,               AE ] };
    key <AB03> { [	   c,          C,      ccedilla,         Ccedilla ] };
    key <AB04> { [	   v,          V,        ugrave,           Ugrave ] };
    key <AB05> { [	   b,          B,        oslash,         Ooblique ] };
    key <AB06> { [	   n,          N,        ntilde,           Ntilde ] };
    key <AB07> { [	   m,          M,            mu,      Greek_OMEGA ] };
    key <AB08> { [     comma,       less,  dead_cedilla,      dead_macron ] };
    key <AB09> { [    period,    greater, dead_belowdot,    dead_abovedot ] };
